# Source: expresso/templates/service.yaml
apiVersion: v1
kind: Service
metadata:
  name: espresso-shop-reviews
  labels:
        app: espresso-shop-reviews
spec:
  type: NodePort
  ports:
    - port: 8092
      targetPort: 80
      protocol: TCP
      name: http
  selector:
        version: v1
        version2: v2
---
# Source: expresso/templates/deployment-v2.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: espresso-shop-reviews-v2
  labels:
    app: espresso-shop-reviews-v2
    version: v1
spec:
  replicas: 1
  selector:
    matchLabels:
    #  labels: 
        app: espresso-shop-reviews-v2
        version: v2
  minReadySeconds: 5
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  template:
    metadata:
      labels:
        app: espresso-shop-reviews-v2
        version: v1
    spec:
      serviceAccountName: espresso-shop-reviews-v2
      securityContext:
        {}
      containers:
        - name: expresso
          securityContext:
            {}
          image: "devopseasylearning2021/s3-project01-espresso-shop-review:v1.0.0"
          env:
           - name: SERVICE_VERSION
             value: v2
          imagePullPolicy: IfNotPresent
          ports:
            - name: http
              containerPort: 80
              protocol: TCP
          # livenessProbe:
          #   httpGet:
          #     path: /
          #     port: http
          # readinessProbe:
          #   httpGet:
          #     path: /
          #     port: http
          resources:
            limits:
              cpu: 100m
              memory: 128Mi
            requests:
              cpu: 100m
              memory: 128Mi
---
