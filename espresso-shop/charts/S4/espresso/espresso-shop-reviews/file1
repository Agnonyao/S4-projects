# Source: expresso/templates/pdb.yaml
apiVersion: policy/v1
kind: PodDisruptionBudget
metadata:
  name: espresso-shop-reviews-v1
  labels:
    app: espresso-shop-reviews-v1
spec:
  maxUnavailable: 1
  selector:
    matchLabels:
       app: espresso-shop-reviews-v1
---
